{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "dist",
    "rootDir": "src" 
  },

  "include": [
    "src/**/*",
    "seed.ts"  
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist" 
  ]
}
